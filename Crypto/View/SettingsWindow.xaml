<Window x:Class="Crypto.View.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Crypto.View"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="250" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" 
                   HorizontalAlignment="Center"
                   FontSize="24"
                   Foreground="#000"
                   > Settings</TextBlock>
        <ComboBox  Grid.Row="1" Width="200" Height="50" Name="Language" Background ="White" BorderBrush ="#b3b3b3" BorderThickness="2">
            <ComboBoxItem>Українська</ComboBoxItem>
            <ComboBoxItem>English</ComboBoxItem>
        </ComboBox>
        <ComboBox  Grid.Row="2" Width="200" Height="50" Name="Theme"  >
            <ComboBoxItem>Світла</ComboBoxItem>
            <ComboBoxItem>Темна</ComboBoxItem>
        </ComboBox>
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,10,10">
            <Button Content="Скасувати" Width="100" Height="30" Margin="0,0,10,0" Style="{StaticResource PaginationButton}"/>
            <Button Content="Встановити" Width="100" Height="30" Style="{StaticResource PaginationButton}"/>
        </StackPanel>
    </Grid>
</Window>
